
@{
    var isAdmin = User.IsInRole("admin");
    var isAgent = User.IsInRole("agent");
    var isTenant = User.IsInRole("tenant");
}
<ul class="navbar-nav">
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            @if (isAdmin)
            {
                <text>Admin</text>
            }
            else if (isAgent)
            {
                <text>Agent</text>
            }
            else if (isTenant)
            {
                <text>Tenant</text>
            }
        </a>
        <ul class="dropdown-menu">
            @if (isAdmin)
            {
           
                <li><a class="dropdown-item" asp-area="" asp-page="/Agent/Properties/Index">Properties</a></li>
                <li><a class="dropdown-item" asp-area="" asp-page="/Agent/PropertyOwners/Index">Property Owners</a></li>
                <li><a class="dropdown-item" asp-area="" asp-page="/Agent/Tenants/Index">Tenants</a></li>
                <li><a class="dropdown-item" asp-area="" asp-page="/Agent/Lease/Index">Lease</a></li>
                <li><a class="dropdown-item" asp-area="" asp-page="/Agent/Accounts/Index">Accounts</a></li>
                <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                
               
            }
            else if (isAgent)
            {
                <li><a class="dropdown-item" asp-area="" asp-page="/Agent/Properties/Index">Properties</a></li>
                <li><a class="dropdown-item" asp-area="" asp-page="/Agent/PropertyOwners/Index">Property Owners</a></li>
                <li><a class="dropdown-item" asp-area="" asp-page="/Agent/Tenants/Index">Tenants</a></li>
                <li><a class="dropdown-item" asp-area="" asp-page="/Agent/Lease/Index">Lease</a></li>
                <li><a class="dropdown-item" asp-area="" asp-page="/Agent/Accounts/Index">Accounts</a></li>
                <li><a class="dropdown-item" asp-area="" asp-page="Agent/Contractors/Index">Contractors</a></li>

                <li><a class="dropdown-item" asp-area="" asp-page="/Maintenance/Index">Maintanance</a></li>             
                <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            }
            else if (isTenant)
            {
                <li><a class="dropdown-item" asp-area="" asp-page="/Maintenance/Create">New Issue</a></li>
            }
            

            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Profile</a></li>
            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Logout</a></li>
            <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            
        </ul>
    </li>
</ul>
