@page
@model TenantPropertyMngt.Pages.Maintenance.CreateModel
@{
}
<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Issue</h2>
        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (Model.successMessage.Length > 0)
        {
            <div class="alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Title</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="maintenanceDto.IssueTitle" />
                    <span asp-validation-for="maintenanceDto.IssueTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="maintenanceDto.IssueDescription" ></textarea>
                    <span asp-validation-for="maintenanceDto.IssueDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Date Reported</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="maintenanceDto.DateReported" />
                    <span asp-validation-for="maintenanceDto.DateReported" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Status</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="maintenanceDto.Status" />
                    <span asp-validation-for="maintenanceDto.Status" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Maintenance/Index" role="button">Cancel</a>
                </div>
            </div>

        </form>

    </div>
</div>
