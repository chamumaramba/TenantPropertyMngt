@page
@model TenantPropertyMngt.Pages.Agent.Contractors.CreateModel
@{
}
<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Contractor</h2>
        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (Model.successMessage.Length > 0)
        {
            <div class="alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Company</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="contractorDto.Company" />
                    <span asp-validation-for="contractorDto.Company" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Specialization</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="contractorDto.Specialization" />
                    <span asp-validation-for="contractorDto.Specialization" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Contact Person</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="contractorDto.FullName" />
                    <span asp-validation-for="contractorDto.FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Address</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="contractorDto.Address"></textarea>
                    <span asp-validation-for="contractorDto.Address" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="contractorDto.Email"/>
                    <span asp-validation-for="contractorDto.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Telephone</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="contractorDto.Telephone" />
                    <span asp-validation-for="contractorDto.Telephone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Agent/Contractors/Index" role="button">Cancel</a>
                </div>
            </div>

        </form>

    </div>
</div>
