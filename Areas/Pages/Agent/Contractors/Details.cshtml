        <h2 class="text-center mb-5">Contractor Details</h2>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.contractorsModel.ContractorID)
            </dd>

            <dt class="col-sm-2">Company</dt>
            <dd class="col-sm-10">
