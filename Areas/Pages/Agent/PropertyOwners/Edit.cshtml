@page
@model TenantPropertyMngt.Pages.Agent.PropertyOwners.EditModel
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Property Owner Details</h2>
        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (Model.successMessage.Length > 0)
        {
            <div class="alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Property Owner ID</label>
                <div class="col-sm-8">
                    <input readonly class="form-control" value="@Model.propertyOwnerModel.PropertyOwnerID"></input>

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="propertyOwnerDto.PropertyOwnerName" />
                    <span asp-validation-for="propertyOwnerDto.PropertyOwnerName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID Card/Passport</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="propertyOwnerDto.OwnerIdCard"></input>
                    <span asp-validation-for="propertyOwnerDto.OwnerIdCard" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Telephone</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="propertyOwnerDto.Telephone"></input>
                    <span asp-validation-for="propertyOwnerDto.Telephone" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="propertyOwnerDto.Email" />
                    <span asp-validation-for="propertyOwnerDto.Email" class="text-danger"></span>
                </div>
              </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Address</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="propertyOwnerDto.Address" ></textarea>
                    <span asp-validation-for="propertyOwnerDto.Address" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Bank Account Details</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="propertyOwnerDto.PaymentDetails" />
                    <span asp-validation-for="propertyOwnerDto.PaymentDetails" class="text-danger"></span>
                </div>
            </div>

                <div class="row mb-3">
                    <div class="offset-sm-4 col-sm-4 d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="col-sm-4 d-grid">
                        <a class="btn btn-outline-primary" href="/Agent/PropertyOwners/Index" role="button">Cancel</a>
                    </div>
                </div>
           
        </form>
    </div>
</div>